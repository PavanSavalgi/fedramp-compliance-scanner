    "configuration": {
      "title": "FedRAMP Compliance Scanner",
      "properties": {
        "fedrampCompliance.level": {
          "type": "string",
          "enum": [
            "Low",
            "Moderate",
            "High"
          ],
          "default": "Moderate",
          "description": "FedRAMP compliance level to check against"
        },
        "fedrampCompliance.complianceStandards": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "FedRAMP",
              "GDPR",
              "HIPAA",
              "DPDP",
              "PCI-DSS",
              "ISO-27001",
              "ISO-27002",
              "SOC-2",
              "NIST-CSF"
            ]
          },
          "default": ["FedRAMP"],
          "description": "Compliance standards to check against"
        },
        "fedrampCompliance.enableAutoScan": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files when they are opened or saved"
        },
        "fedrampCompliance.enableSecurityScan": {
          "type": "boolean",
          "default": true,
          "description": "Enable security vulnerability scanning along with compliance checks"
        },
        "fedrampCompliance.includePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.tf",
            "**/*.yaml",
            "**/*.yml",
            "**/*.json",
            "**/*.hcl",
            "**/*.md",
            "**/*.txt",
            "**/*.sh",
            "**/*.py",
            "**/*.js",
            "**/*.ts"
          ],
          "description": "File patterns to include in compliance scanning"
        },
        "fedrampCompliance.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/vendor/**",
            "**/.git/**"
          ],
          "description": "File patterns to exclude from compliance scanning"
        },
        "fedrampCompliance.reportHistory": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": [],
          "description": "History of compliance reports for trend analysis (automatically managed)"
        },
        "fedrampCompliance.batchSize": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Number of files to process in parallel (performance tuning)"
        },
        "fedrampCompliance.enableCaching": {
          "type": "boolean",
          "default": true,
          "description": "Enable result caching to improve performance on unchanged files"
        },
        "fedrampCompliance.cacheSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of cached file results"
        },
        "fedrampCompliance.progressReporting": {
          "type": "boolean",
          "default": true,
          "description": "Show progress reports for large scans (>50 files)"
        },
        "fedrampCompliance.realTimeMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time monitoring of file changes for instant compliance feedback"
        },
        "fedrampCompliance.autoRemediation": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-remediation suggestions and code actions for compliance violations"
        },
        "fedrampCompliance.executiveDashboard": {
          "type": "boolean",
          "default": true,
          "description": "Enable executive dashboard with visual compliance analytics"
        },
        "fedrampCompliance.exportFormat": {
          "type": "string",
          "enum": [
            "PDF",
            "HTML",
            "JSON",
            "CSV"
          ],
          "default": "PDF",
          "description": "Default format for exporting compliance reports"
        },
        "fedrampCompliance.dashboardRefreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Dashboard refresh interval in seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
